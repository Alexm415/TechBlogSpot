<div class="container">
  <h1 class="text-center">BlogSpot</h1>
  {{#if posts}}
    {{#each posts as |post|}}
      <div class="container">
        <p>
          {{post.content}}
        </p>
        <h3>
          Created by
          {{post.user.username}}
        </h3>
      </div>
    {{/each}}
  {{else}}
    <p>No post YET!</p>
  {{/if}}
</div>